# CZMQ cmake module
#
# The following import targets are created
#
# ::
#
#   czmq-static
#   czmq
#
# This module sets the following variables in your project::
#
#   CZMQ_FOUND - true if CZMQ found on the system
#   CZMQ_INCLUDE_DIR - the directory containing CZMQ headers
#   CZMQ_LIBRARY - 
#   CZMQ_STATIC_LIBRARY

@PACKAGE_INIT@

if(NOT TARGET czmq::czmq AND NOT TARGET czmq::czmq-static)
  include("${CMAKE_CURRENT_LIST_DIR}/@PROJECT_NAME@Targets.cmake")
  
  if(TARGET czmq::czmq)
	  get_target_property(@PROJECT_NAME@_INCLUDE_DIR czmq::czmq INTERFACE_INCLUDE_DIRECTORIES)
  	  get_target_property(@PROJECT_NAME@_LIBRARY czmq::czmq LOCATION)
  endif()

  if(TARGET czmq::czmq-static)
	get_target_property(@PROJECT_NAME@_INCLUDE_DIR czmq::czmq-static INTERFACE_INCLUDE_DIRECTORIES)
    get_target_property(@PROJECT_NAME@_STATIC_LIBRARY czmq::czmq-static LOCATION)
  endif()

endif()
